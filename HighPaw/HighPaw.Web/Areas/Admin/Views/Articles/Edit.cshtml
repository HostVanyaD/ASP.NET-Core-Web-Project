@model ArticleServiceModel

@{
    ViewBag.Title = "Edit current Article/Story";
}

<section class="page-title" style="margin-top: 5rem;">
    <div class="row align-items-center justify-content-center height100px">
        <div class="col-auto">
            <div class="page-title-content">
                <div class="title-border">
                    <h1 class="text text-uppercase font-weight-bold">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<form asp-controller="Articles" asp-action="Edit" class="row g-3">
    <div class="col-12">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Content" class="form-label" style="white-space: pre-line"></label>
        <textarea asp-for="Content" type="text" class="form-control" placeholder="Write your content here..." rows="10"></textarea>
        <span asp-validation-for="Content" class="small text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="text" class="form-control">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="CreatorName" class="form-label">Creator</label>
        <input asp-for="CreatorName" type="text" class="form-control" value="@Model.CreatorName">
    </div>
    <div class="col-md-4">
        <label asp-for="ArticleType" class="form-label">Type of content</label>
        <input asp-for="ArticleType" type="text" class="form-control" value="@Model.ArticleType">
    </div>
    <div class="col-md-4">
        <label asp-for="CreatedOn" class="form-label">Created On</label>
        <input asp-for="CreatedOn" type="text" class="form-control" value="@Model.CreatedOn">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Post</button>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}