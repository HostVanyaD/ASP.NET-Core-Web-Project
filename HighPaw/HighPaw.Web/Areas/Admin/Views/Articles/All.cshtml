@model IEnumerable<ArticleServiceModel>

@{
    ViewBag.Title = "Articles Administration";
}

<partial name="_PageTitlePartial" />


<section class="py-9 pt-md-5">
    <div class="container">
        <partial name="_AdminMenuPartial" />
        <a asp-controller="Articles" asp-action="Create" class="btn btn-outline-success mb-3" style="color: #fdc57b;">Create New</a>

        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Creator Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">Image URL</th>
                        <th scope="col">Created On</th>
                        <th scope="col">Type</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var article in @Model)
                   {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.CreatorName</td>
                        <td>@article.Title</td>
                        <td>@article.Content.Substring(0, 200)</td>
                        <td>@article.ImageUrl</td>
                        <td>@article.CreatedOn</td>
                        <td>@article.ArticleType</td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-start">
                                <a asp-controller="Articles" asp-action="Edit" asp-route-id="@article.Id" class="btn btn-info btn-sm"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                <a asp-controller="Articles" asp-action="Delete" asp-route-id="@article.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this article from the database?')"><i class="fa-solid fa-trash"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>