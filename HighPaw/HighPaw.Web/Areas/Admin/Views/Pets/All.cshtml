@model IEnumerable<PetListingServiceModel>

@{
    ViewBag.Title = "Pets Administration";
}

<partial name="_PageTitlePartial" />

<section class="py-9 pt-md-5">
    <div class="container">
        <partial name="_AdminMenuPartial" />
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">ImageUrl</th>
                        <th scope="col">Age</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Shelter Address</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model)
                    {
                        <tr>
                            <td scope="col">@pet.Id</td>
                            <td scope="col">@pet.Name</td>
                            <td scope="col">@pet.ImageUrl</td>
                            <td scope="col">@pet.Age</td>
                            <td scope="col">@pet.Gender</td>
                            <td scope="col">@pet.ShelterName</td>
                            <td scope="col"> 
                                <a asp-controller="Pets" asp-action="Delete" asp-route-id="@pet.Id"
                               class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this pet from the database?')">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</section>