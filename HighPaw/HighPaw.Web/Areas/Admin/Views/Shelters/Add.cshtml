@model AddShelterFormServiceModel

@{
    ViewBag.Title = "Add Shelter's details";
}

<section id="form" style="margin-top: 5rem;">
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="text-uppercase">
                    Fill this form to
                    <br>
                    <span style="color: #fdc57b;">@ViewBag.Title</span>
                </h3>
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" asp-controller="Shelters" asp-action="Add">
                                <div class="form-group col-md-6 mb-2 mt-4 offset-md-3">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Name...">
                                    <span asp-validation-for="Name" class="small text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-2 offset-md-3">
                                    <label asp-for="Address"></label>
                                    <input asp-for="Address" class="form-control" placeholder="Address">
                                    <span asp-validation-for="Address" class="small text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-2 offset-md-3">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Shelter's e-mail">
                                    <span asp-validation-for="Email" class="small text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-2 offset-md-3">
                                    <label asp-for="PhoneNumber"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="+359XXXXXXXXX">
                                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-2 offset-md-3">
                                    <label asp-for="Description"></label>
                                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                                    <span asp-validation-for="Description" class="small text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mb-2 offset-md-3">
                                    <label asp-for="Website"></label>
                                    <input asp-for="Website" class="form-control">
                                    <span asp-validation-for="Website" class="small text-danger"></span>
                                </div>
                            <button type="submit" class="btn btn-success">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}