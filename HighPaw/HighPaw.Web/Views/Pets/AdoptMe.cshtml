@model PetServiceModel

@{
    ViewBag.Title = "Adopted";
}

<h1 class="postcard__text text-center" style="color: #5e9693; margin: 5rem 0 2rem 0;">Yayyy! You adopted me! I can't wait to meet you!💚</h1>
<h4 class="text-center mb-3">We will review your request and contact you shortly</h4>
<article class="postcard light green" style="margin: 3rem 0 3rem 0;">
    <a class="postcard__img_link" href="#">
        <img class="postcard__img" src="@Model.ImageUrl" alt="@Model.Name" />
    </a>
    <div class="postcard__text">
        <h1 class="postcard__title green"><a href="#">@Model.Name</a></h1>
        <div class="postcard__subtitle small">
            <time datetime="2020-05-25 12:00:00">
                <i class="fas fa-calendar-alt mr-2"></i>Mon, May 25th 2020
            </time>
        </div>
        <div class="postcard__bar"></div>
        <div class="postcard__preview-txt">
            <div class="row">
                <div class="column">
                    <p>Age: @Model.Age</p>
                    <p>Gender: @Model.Gender</p>
                    <p>Shelter: @Model.ShelterName</p>
                </div>
            </div>
        </div>
            <ul class="postcard__tagbox">
            <li class="tag__item play green">
                <a><i class="fa-solid fa-face-grin-hearts"></i> I am adopted</a>
            </li>
        </ul>
    </div>
</article>