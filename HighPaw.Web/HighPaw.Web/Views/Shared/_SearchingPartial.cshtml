@model AllPetsQueryModel

<div class="container" style="margin-top: 5rem;">
    <form method="get">
        <div class="input-group mb-3">
    <input asp-for="SearchString" type="text" class="form-control" placeholder="Search by breed, age, gender ect...">
    <button class="input-group-text shadow-none px-4 btn-warning">
        <i class="bi bi-search"></i>
    </button>
</div>
</form>

<div class="d-grid gap-2 d-md-block">
    <a type="button" class="btn btn-outline-warning btn-rounded ml-2" data-mdb-ripple-color="dark" asp-controller="Pets" asp-action="Add">I Found A Pet</a>
    <a type="button" class="btn btn-outline-warning btn-rounded ml-2" data-mdb-ripple-color="dark" asp-controller="Pets" asp-action="Add">I Lost My Pet</a>
    </div>
</div>