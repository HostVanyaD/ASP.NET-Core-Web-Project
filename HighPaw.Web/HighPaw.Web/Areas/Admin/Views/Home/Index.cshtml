@{
    ViewBag.Title = "Admin area";
}

<section class="page-title" style="margin-top: 5rem;">
    <div class="row align-items-center justify-content-center height100px">
        <div class="col-auto">
            <div class="page-title-content">
                <div class="title-border">
                    <h1 class="text text-uppercase font-weight-bold">@ViewBag.Title</h1>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="py-9 pt-md-5">
    <div class="container">
        <div class="col-12 text-center pb-5">
            <a asp-controller="" asp-action="" class="btn btn-secondary btn-sm" style="color: #fdc57b;">Users</a>
            <a asp-controller="" asp-action="" class="btn btn-secondary btn-sm" style="color: #fdc57b;">Pets</a>
            <a asp-controller="" asp-action="" class="btn btn-secondary btn-sm" style="color: #fdc57b;">Shelters</a>
            <a asp-controller="" asp-action="" class="btn btn-secondary btn-sm" style="color: #fdc57b;">Events</a>
            <a asp-controller="" asp-action="" class="btn btn-secondary btn-sm" style="color: #fdc57b;">Articles</a>
        </div>

        <div class="col-12">
            <h3 class="element-title">Last 10 Added Pets</h3>
            <hr class="mt-2" />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Lost/Found</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Id number here</th>
                        <td>Name here</td>
                        <td>Type here</td>
                        <td>Lost or found here</td>
                    </tr>

                </tbody>
            </table>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="####" class="smoothScroll btn btn-secondary btn-rounded text-center" style="color: #fdc57b;" width="32" alt=""> View All </a>
            </div>

        </div>

        <div class="col-12">
            <h3 class="element-title">Last 10 Created Articles</h3>
            <hr class="mt-2" />
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">User</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col">Actions</th> @*TODO: Align with buttons group*@
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>User here</td>
                        <td>Title here</td>
                        <td>Content here</td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-center">
                                <button class="btn btn-outline-success" type="button">Approve</button>
                                <button class="btn btn-outline-info" type="button">Edit</button>
                                <button class="btn btn-outline-danger" type="button">Decline</button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="####" class="smoothScroll btn btn-secondary btn-rounded text-center" style="color: #fdc57b;" width="32" alt=""> View All </a>
            </div>
        </div>

    </div>
</section>


